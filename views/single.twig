{% extends "base.twig" %}

{% block content %}
<section id="content" role="main" class="content-wrapper">
    <div class="wrapper layout-well">
        <div class="content-wrapper">
            <article class="post post-type-post" id="post-1463">
                <section class="article-content">
                	{% if post.thumbnail.src %}
                		<img src="{{post.thumbnail.src|letterbox(400, 400, 'FFFFFF')}}" style="border:1px solid; max-width:100%; width:100%;" />
                	{% endif %}
                    <h1 class="article-h1">{{post.post_title}}</h1>
                    <p class="blog-author">
                        <span>By</span><a href="{{post.author.link}}"> {{post.author.name}}</a><span>&bull;</span> {{post.post_date|date('l F j, Y')}}
                    </p>
                    <div class="article-body">
                        {{post.content}}
                    </div>
                </section>

                <section class="comments">
                    <h3 class="h3">Comments</h3>
                    <div class="respond">
                        {{comment_form}}
                    </div>
                    <div class="responses">
                                            </div>
                </section>
            </article>
        </div> <!-- /content-wrapper -->

    </div>
</section>
{% endblock %}
